{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "zi_dio": {
      "type": "object",
      "properties": {
        "device": {
          "type": "string"
        }
      },
      "required": [
        "device"
      ]
    },
    "zi_awg_channel_config": {
      "type": "object",
      "properties": {
        "wave": {
          "type": [
            "string",
            "null"
          ]
        },
        "trig": {
          "type": [
            "string",
            "null"
          ]
        },
        "marker": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "wave",
        "trig",
        "marker"
      ]
    },
    "zi_awg_config": {
      "type": "object",
      "properties": {
        "iq": {
          "type": "boolean"
        }
      },
      "required": [
        "iq"
      ]
    },
    "zi_awg": {
      "type": "object",
      "properties": {
        "awg": {
          "type": "number",
          "minimum": 0,
          "maximum": 3
        },
        "config": {
          "$ref": "#/definitions/zi_awg_config"
        },
        "ch0": {
          "$ref": "#/definitions/zi_awg_channel_config"
        },
        "ch1": {
          "$ref": "#/definitions/zi_awg_channel_config"
        }
      },
      "required": [
        "ch0",
        "ch1"
      ]
    },
    "zi_awg_array": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/zi_awg"
      }
    },
    "zi_awg_dio": {
      "type": "object",
      "properties": {
        "awgs": {
          "$ref": "#/definitions/zi_awg_array"
        },
        "dio": {
          "$ref": "#/definitions/zi_dio"
        }
      }
    },
    "zi_device_connectivity": {
      "type": "object",
      "properties": {
        "type": {
          "$ref": "#/definitions/zi_awg_dio"
        }
      }
    },
    "zi_device_config": {
      "type": "object",
      "properties": {
        "serial": {
          "type": "string",
          "minLength": 7,
          "maxLength": 8
        },
        "device_type": {
          "type": "string",
          "enum": [
            "hdawg",
            "uhfqa",
            "pqsc"
          ]
        },
        "interface": {
          "type": "string",
          "enum": [
            "usb",
            "1gbe"
          ]
        }
      },
      "required": [
        "serial",
        "device_type",
        "interface"
      ]
    },
    "zi_devices": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "config": {
          "$ref": "#/definitions/zi_device_config"
        },
        "connectivity": {
          "$ref": "#/definitions/zi_awg_dio"
        }
      }
    },
    "zi_devices_array": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/zi_devices"
      }
    },
    "zi_device_setup": {
      "type": "object",
      "properties": {
        "provider": {
          "type": "string",
          "enum": [
            "zi"
          ]
        },
        "setup": {
          "$ref": "#/definitions/zi_devices_array"
        }
      },
      "required": [
        "provider",
        "setup"
      ]
    },
    "device_config": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/zi_device_setup"
      }
    },
    "zi_api_config": {
      "type": "object",
      "properties": {
        "host": {
          "type": "string"
        },
        "port": {
          "type": "number",
          "minLength": 1,
          "maxLength": 5
        },
        "api": {
          "type": "number",
          "maxLength": 1,
          "minimum": 1,
          "maximum": 6,
          "default": 6
        }
      },
      "required": [
        "host",
        "port"
      ]
    },
    "api_config_details": {
      "type": "array",
      "items": [
        {
          "$ref": "#/definitions/zi_api_config"
        }
      ]
    },
    "api_configs": {
      "type": "object",
      "properties": {
        "provider": {
          "type": "string",
          "enum": [
            "zi"
          ]
        },
        "details": {
          "$ref": "#/definitions/zi_api_config"
        }
      },
      "required": [
        "provider",
        "details"
      ]
    },
    "api_configs_list": {
      "type": "array",
      "items": {
          "$ref": "#/definitions/api_configs"
        }
    }
  },
  "type": "object",
  "properties": {
    "api_configs": {
      "$ref": "#/definitions/api_configs_list"
    },
    "instruments": {
      "$ref": "#/definitions/device_config"
    }
  },
  "required": [
    "api_configs",
    "instruments"
  ]
}
